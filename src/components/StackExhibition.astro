---
import {about} from '../config/about'
const tech_stack = about.tech_stack;
---

<ul class="*:list-none! w-1/2 h-50 m-auto mt-60! relative z-2">
  {tech_stack.map(t => <img src={t.icon} class="animate-pulse cursor-pointer w-30 h-30 rounded-3xl! bg-cover absolute left-[50%] -translate-x-[50%] bg-transparent" title={t.title} />) }
</ul>

<style>
img {
  --trans: all .5s ease-out;
  transition: all .4s ease-out;
}

img.active:nth-child(1) {
  transition: var(--trans);
  transform: translate(-300px, -100px);
}
img.active:nth-child(2) {
  transition: var(--trans);
  transform: translate(-100px, -100px);
}
img.active:nth-child(3) {
  transition: var(--trans);
  transform: translate(100px, -100px);
}
img.active:nth-child(4) {
  transition: var(--trans);
  transform: translate(300px, -100px);
}
img.active:nth-child(5) {
  transition: var(--trans);
  transform: translate(500px, -100px);
}
img.active:nth-child(6) {
  transition: var(--trans);
  transform: translate(-500px, -100px);
}
img {
  -webkit-user-drag: none;
  user-select: none;
  transform: translate(0, 0);
}
</style>

<script>
  const imgs = document.querySelectorAll('img')
  
  imgs.forEach(img => {
    img.addEventListener('click', () => {
      imgs.forEach(g => g.classList.toggle('active'))
      imgs.forEach(g => g.classList.toggle('animate-pulse'))
    })
  })
</script>