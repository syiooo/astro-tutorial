{
  "extends": ["astro/tsconfigs/strict", "astro/tsconfigs/base"],
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "strictNullChecks": true, // 使用 `base` 模板需要添加
    "allowJs": true, // 必需，包含在所有 Astro 模板中
    "jsxImportSource": "preact"
  }
}
